{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": "every weekend",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "patch and minor updates"
    }
  ],
  "prHourlyLimit": 3
}
