<style>
  :root {
    --font-main: 'Calibre', 'Inter', 'San Francisco', 'SF Pro Text',
      -apple-system, system-ui, sans-serif;
  }

  main {
    font-family: var(--font-main);
    background-color: #0b192e;

    color: rgb(156 163 175);
  }
  .email-link {
    -webkit-writing-mode: vertical-rl;
    writing-mode: vertical-rl;
  }

  .container {
    margin-left: 50px;
    margin-right: 50px;
  }
</style>

<style is:global>
  h1.with-anim {
    position: relative;
  }
  h1.with-anim::before,
  h1.with-anim.with-anim--right::after {
    content: '';
    width: 40px;
    height: 40px;
    position: absolute;
    left: 0px;
    top: 0px;
    background: url(data:image/svg+xml;base64,)
      0% 0% / 40px;
    animation: 4s linear 0s infinite normal none running rotate;
  }

  h1.with-anim.with-anim--right::after {
    right: 0px;
    left: unset;
  }

  @keyframes rotate {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>
